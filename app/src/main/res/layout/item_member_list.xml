<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/list_tile_height"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/memberPhoto"
        android:layout_width="@dimen/list_size_avatar"
        android:layout_height="@dimen/list_size_avatar"
        android:layout_marginLeft="@dimen/list_left_padding"
        android:layout_marginStart="@dimen/list_left_padding"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/member_description_photo"/>

    <TextView
        android:id="@+id/memberFullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/list_right_padding"
        android:layout_marginLeft="@dimen/list_left_padding"
        android:layout_marginRight="@dimen/list_right_padding"
        android:layout_marginStart="@dimen/list_left_padding"
        android:layout_marginTop="16dp"
        android:textColor="@color/text_color"
        android:textSize="16sp"/>

</LinearLayout>